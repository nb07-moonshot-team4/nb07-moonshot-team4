datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

//////////////////// ENUMS ////////////////////

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum MemberStatus {
  INVITED
  ACTIVE
  REJECTED
  LEFT
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
  BACKLOG
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum SubTaskStatus {
  TODO
  DONE
}

//////////////////// MODELS ////////////////////

model User {
  id              Int                 @id @default(autoincrement())
  email           String              @unique
  name            String
  profileImage    String?
  projectLimit    Int                 @default(5)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  ownedProjects   Project[]           @relation("ProjectOwner")
  projects        ProjectMember[]
  assignedTasks   Task[]              @relation("TaskAssignee")
  createdTasks    Task[]              @relation("TaskCreator")
  comments        Comment[]
  authProviders   UserAuthProvider[]
  refreshTokens   RefreshToken[]
}

model UserAuthProvider {
  id             Int      @id @default(autoincrement())
  userId         Int
  provider       String
  providerUserId String
  passwordHash   String?

  accessToken    String?  @db.Text
  refreshToken   String?  @db.Text

  createdAt      DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerUserId])
}

model RefreshToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  token     String    @unique @db.Text
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Project {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  color           String?

  todoCount       Int      @default(0)
  inProgressCount Int      @default(0)
  doneCount       Int      @default(0)
  memberCount     Int      @default(1)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  ownerId         Int
  owner           User     @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Restrict)

  members         ProjectMember[]
  tasks           Task[]
  tags            Tag[]

  @@index([ownerId])
}

model ProjectMember {
  id           Int          @id @default(autoincrement())
  userId       Int
  projectId    Int
  role         Role         @default(MEMBER)
  status       MemberStatus @default(INVITED)
  invitationId String?
  joinedAt     DateTime?
  createdAt    DateTime     @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model Task {
  id          Int        @id @default(autoincrement())
  projectId   Int
  assigneeId  Int?
  creatorId   Int?
  googleEventId String?

  title       String
  content     String?    @db.Text

  startDate   DateTime?
  endDate     DateTime?

  status      TaskStatus @default(TODO)
  priority    Priority   @default(MEDIUM)

  progress    Int        @default(0)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?      @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: SetNull)
  creator     User?      @relation("TaskCreator", fields: [creatorId], references: [id], onDelete: SetNull)

  subTasks    SubTask[]
  comments    Comment[]
  attachments Attachment[]
  tags        TaskTag[]

  @@index([projectId])
  @@index([assigneeId])
  @@index([status])
  @@index([priority])
  @@index([createdAt])
  @@index([endDate])
  @@index([title])
  @@index([googleEventId])
}

model SubTask {
  id        Int           @id @default(autoincrement())
  taskId    Int
  title     String
  status    SubTaskStatus @default(TODO)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  task      Task          @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model Tag {
  id        Int       @id @default(autoincrement())
  projectId Int
  name      String
  color     String?

  project   Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks     TaskTag[]

  @@unique([projectId, name])
}

model TaskTag {
  taskId Int
  tagId  Int

  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  taskId    Int
  userId    Int
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([taskId])
  @@index([userId])
}

model Attachment {
  id       Int    @id @default(autoincrement())
  taskId   Int
  url      String
  name     String
  mimeType String?
  size     Int?

  task     Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
}
